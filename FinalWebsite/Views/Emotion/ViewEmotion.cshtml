@model Emotion

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Boho Emotion Entry</title>
    <style>
        body {
            font-family: 'CursiveFont', cursive;
            background-color: #f8f3e7; /* Light beige background */
            margin: 20px;
            line-height: 1.6;
            color: #634b4a; /* Terracotta text color */
        }

        h3 {
            text-align: center;
            color: #a0848c; /* Dusty rose heading color */
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #f5e5d5; /* Warm beige table background */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #a0848c; /* Dusty rose table header background */
            color: #000; /* Light beige text color for table header */
        }

        tr:nth-child(even) {
            background-color: #f5e5d5; /* Slightly darker beige for alternate rows */
        }

        a {
            display: inline-block;
            margin: 10px;
            padding: 10px;
            border-radius: 5px;
            text-decoration: none;
            color: #9b6c71; /* Muted burgundy color for links */
            border: 1px solid #9b6c71; /* Muted burgundy border for links */
            transition: color 0.3s ease-in-out, background-color 0.3s ease-in-out;
        }

            a:hover {
                color: #f8f3e7; /* Light beige text color on hover */
                background-color: #9b6c71; /* Muted burgundy background on hover */
            }

        input[type="submit"] {
            display: inline-block;
            margin: 10px;
            padding: 10px;
            border-radius: 5px;
            background-color: #a0848c; /* Dusty rose submit button color */
            color: #000; /* Light beige text color for submit button */
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            input[type="submit"]:hover {
                background-color: #9b6c71; /* Muted burgundy background on hover */
            }
    </style>
</head>
<body>

    <h3>Entry For @Model.Date</h3>

    <table class="table">
        <tr>
            <th>Entry ID</th>
            <th>Date</th>
            <th>How are you feeling?</th>
            <th>Entry</th>
        </tr>
        <tr>
            <td>@Model.NewEntryID</td>
            <td>@Model.Date</td>
            <td>@Model.EmotionName</td>
            <td>@Model.EntryText</td>
        </tr>
    </table>

    <div style="display: block">
        <a href="/Emotion/UpdateEmotion/@Model.NewEntryID">Click Here to Add to This Entry</a>
    </div>

    <div style="display: block">
        @using (Html.BeginForm("DeleteEmotion", "Emotion", FormMethod.Post))
        {
            <input type="hidden" asp-for="NewEntryID" value="@Model.NewEntryID" />
            <input type="submit" onclick="return confirm('Are you sure?')" value="Delete This Entry" />
        }
    </div>

</body>
</html>
