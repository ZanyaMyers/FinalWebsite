@model IEnumerable<Emotion>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Boho Dear Diary</title>
    <style>
        body {
            font-family: 'CursiveFont', cursive;
            background-color: #f5e5d5; /* Warm beige background */
            margin: 20px;
            line-height: 1.6;
            color: #634b4a; /* Terracotta text color */
        }

        h2 {
            text-align: center;
            color: #a0848c; /* Dusty rose heading color */
        }

        a {
            display: inline-block;
            margin: 10px;
            padding: 10px;
            border-radius: 5px;
            text-decoration: none;
            color: #9b6c71; /* Muted burgundy color for links */
            border: 1px solid #9b6c71; /* Muted burgundy border for links */
            transition: color 0.3s ease-in-out, background-color 0.3s ease-in-out;
        }

            a:hover {
                color: #f5e5d5; /* Warm beige text color on hover */
                background-color: #9b6c71; /* Muted burgundy background on hover */
            }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #f5e5d5; /* Warm beige table background */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            background-color: #a0848c; /* Dusty rose table header background */
            color: #000; /* Light beige text color for table header */
        }

        tr:nth-child(even) {
            background-color: #f8f3e7; /* Light beige for alternate rows */
        }
    </style>
</head>
<body>

    <h2>Welcome to Your Diary!</h2>

    <div style="display: block">
        <a href="/Emotion/InsertEmotion/">Click to Document Your Day</a>
    </div>

    <table class="table">
        <tr>
            <th>Entry ID</th>
            <th>Date</th>
            <th>How Are You Feeling Today?</th>
            <th>Tell Me About Your Day</th>
        </tr>

        @foreach (var emotion in @Model)
        {
            <tr>
                <td><a href="/Emotion/ViewEmotion/@emotion.NewEntryID">@emotion.NewEntryID</a></td>
                <td>@emotion.Date</td>
                <td>@emotion.EmotionType @emotion.EmotionName</td>
                <td>@emotion.EntryText</td>
            </tr>
        }
    </table>

</body>
</html>
